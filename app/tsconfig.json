{
    "compilerOptions": {
        "target": "es5",
        "module": "system",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": false,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "listFiles": false
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "server",
        "public",
        ".vscode"
    ]
}
